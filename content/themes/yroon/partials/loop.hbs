{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}

{{!-- Add a `featured` class to the first post on each page, if it has an image and isn't already featured --}}
<article class="{{post_class}} {{#if @first}}{{#if feature_image}}{{#unless featured}}featured{{/unless}}{{/if}}{{/if}}">

    {{#if feature_image}}
        <div class="image-holder">
            <a href="{{url}}" class="inner" style="background-image: url('{{img_url feature_image}}');">
                <img src="{{feature_image}}">
            </a>
        </div>
    {{/if}}

    <div class="meta">
        <time datetime="{{date format='YYYY-MM-DD'}}"><a href="{{url}}">{{date format="MMMM DD, YYYY"}}</a></time>
    </div>

    <header>
        <h1><a href="{{url}}">{{title}}</a></h1>
    </header>

    <div class="text">
        <p>{{excerpt characters="50"}}</p>
        <a href="{{url}}" class="readmore">继续阅读</a>
    </div>
</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}
